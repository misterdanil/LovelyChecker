<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_style"
    android:elevation="10dp"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="15dp"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_person_24"
            app:shapeAppearanceOverlay="@style/circleImageView"
            app:strokeColor="@color/avatar_border"
            app:strokeWidth="4dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout android:orientation="horizontal"
                android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rati"
                android:fontFamily="@font/gothampro_bold"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:text="3/5" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_star_24"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/nick"
                android:fontFamily="@font/gothampro"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="valeriya.kk" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3"
            android:layout_width="150dp"
            android:fontFamily="@font/gothampro_medium"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/contact_button_style"
            android:layout_marginRight="15dp"
            android:text="Связаться"
            android:drawableRight="@drawable/baseline_mail_outline_24"
            android:textSize="12sp"
            android:textColor="#FFF5F5" />
        <LinearLayout android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical">
        <ImageView
            android:id="@+id/like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/like"
            />
            <TextView
                android:id="@+id/likeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="(14)"
                />
        </LinearLayout>
        <LinearLayout android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/dislike"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:rotation="180"
                android:src="@drawable/like"
                />
            <TextView
                android:id="@+id/dislikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="(14)"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical"
        android:layout_marginTop="15dp">
    <TextView
        android:id="@+id/zag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I know"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/gothampro_medium"
        android:textColor = "@color/text_black"/>

    <TextView
        android:id="@+id/op"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gothampro"
        android:text="TextView"
        android:textColor="@color/text_black" />
    </LinearLayout>
</LinearLayout>