<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingTop="20dp"
    android:paddingRight="5dp"
    tools:context=".ChatsFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageViewChat"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginRight="15dp"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/phone"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:strokeColor="#758EBC"
        app:strokeWidth="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Валерия"
                android:fontFamily="@font/gothampro_medium"
                android:textColor="#748DBB"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15 января"
                android:fontFamily="@font/gothampro"
                android:textAlignment="textEnd"
                android:textColor="@color/lavender"
                android:textSize="18dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_weight="1"
            android:fontFamily="@font/gothampro"
            android:text="Фотоаппарат Fujifilm Instax mini 11"
            android:textColor="#8E9094" />

        <TextView
            android:id="@+id/textViewLastMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="2"
            android:fontFamily="@font/gothampro"
            android:ellipsize="end"
            android:text="Добрый день, да фокусировка у
                    фотоаппарата есть."
            android:textColor="#3D3D3D"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>