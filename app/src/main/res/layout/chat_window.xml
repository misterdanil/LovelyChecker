    <RelativeLayout
        android:id="@+id/chatInfo"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/custom_border"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:id="@+id/back_arrow"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            app:tint="#696C71" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/product_image"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_toEndOf="@id/back_arrow"
            android:layout_marginRight="15dp"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/phone"
            app:shapeAppearanceOverlay="@style/circleImageView"
            app:strokeColor="@color/lavender"
            app:strokeWidth="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Валерия"
            android:textSize="20dp"
            android:textColor="@color/lavender"
            android:id="@+id/chat_image_name"
            android:layout_toEndOf="@id/product_image"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Фотоаппарат Fujifilm Instax mini 11"
            android:textSize="15dp"
            android:layout_marginTop="25dp"
            android:textColor="#8E9094"
            android:id="@+id/chat_image_productName"
            android:layout_toEndOf="@id/product_image"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/prodList"
        android:layout_width="match_parent"
        android:layout_marginStart="1dp"
        android:layout_height="0dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/card_view"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chatInfo"
        app:layout_constraintVertical_bias="0.0" />
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:contentPadding="0dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/top_shadow_gradient" />
            <RelativeLayout
                android:id="@+id/layout_gchat_chatbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <EditText
                    android:id="@+id/edit_gchat_message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toStartOf="@+id/button_gchat_send"
                    android:background="@null"
                    android:hint="Введите сообщение"
                    android:inputType="text"
                    android:maxLines="6"
                    tools:ignore="Autofill" />

                <Button
                    android:id="@+id/button_gchat_send"
                    android:layout_width="54dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/baseline_send_24"
                    android:layout_centerVertical="true"
                    android:textColor="@color/lavender" />

            <!-- your layout stuff here -->

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>